@model IEnumerable<Curso>

@{
    ViewData["Title"] = "Informacion Curso";
    Layout = "_Simple";
}

<h1>@ViewData["Title"]</h1>

<!-- @foreach (var alumno in Model)
{
    <partial name="_ObjetoEscuelaSimple" model="alumno"></partial>
} -->

<table class="table table-dark table-hover">
    <thead>
        <th scope="col">Nombre</th>
        <th scope="col">Id</th>
        <th scope="col">Dirección</th>
        <th scope="col">Jornada</th>
    </thead>
    <tbody>
@foreach (var curso in Model)
{
    <tr>
        <td>@curso.Nombre</td>
        <td>@curso.Id</td>
        <td>@curso.Dirección</td>
        <td>@curso.Jornada</td>
        <td>
              @Html.ActionLink("Editar", "Update", new { id = curso.Id })
        </td>
        <td>
              @Html.ActionLink("Eliminar", "Delete", new { id = curso.Id })
        </td>
    </tr>
}
    </tbody>
</table>