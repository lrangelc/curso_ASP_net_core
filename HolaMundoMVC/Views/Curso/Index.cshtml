@model Curso

@{
    ViewData["Title"] = "Informacion Curso";
    Layout = "_Simple";
}

<h1>@ViewData["Title"]</h1>
@if (ViewBag.Mensaje_CreateUpdate != null)
{
<div class="alert alert-success" role="alert">
    @ViewBag.Mensaje_CreateUpdate
</div>
}

<strong>Desde la vista normal</strong>
<p>
    Nombre: @Model.Nombre
    <br/>
    Id: @Model.Id
</p>

<strong>Desde la vista parcial</strong>
<partial name="_ObjetoEscuelaSimple"></partial>